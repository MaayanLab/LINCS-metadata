{
    "profile": "tabular-data-package",
    "name": "table_schema_specs_for_lincs_tools",
    "title": "Schematic specifications for manifest of LINCS tools and associated metadata",
    "resources": [
        {
            "profile": "tabular-data-resource",
            "name": "tools",
            "title": "tools",
            "path": "tools.tsv",
            "format": "tsv",
            "description": "LINCS tools manifest",
            "schema": {
                "fields": [
                    {
                        "name": "Tool_Name",
                        "description": "name of the tool",
                        "type": "string",
                        "constraints": {
                            "required": true,
                            "unique": true
                        }
                    },
                    {
                        "name": "tool_homepage_url",
                        "description": "link to the article",
                        "type": "string",
                        "constraints": {
                            "required": true
                        }
                    },
                    {
                        "name": "Tool_Description",
                        "description": "short description of the tool's functionality",
                        "type": "string"
                    },
                    {
                        "name": "Center",
                        "description": "lincs center responsible for tool",
                        "type": "string"
                    },
                    {
                        "name": "PMID",
                        "description": "list of pubmed ids",
                        "type": "integer"
                    },
                    {
                        "name": "Electronic_Location_Identifier",
                        "description": "doi of the article",
                        "type": "string"
                    },
                    {
                        "name": "Article_Title",
                        "description": "title of the article",
                        "type": "string"
                    },
                    {
                        "name": "Article_Date",
                        "description": "publication date of the article",
                        "type": "date"
                    },
                    {
                        "name": "Abstract",
                        "description": "article abstract",
                        "type": "string"
                    },
                    {
                        "name": "Journal_Title",
                        "description": "journal full name",
                        "type": "string"
                    },
                    {
                        "name": "ISSN",
                        "description": "electronic ISSN - matches to ISSN on the journals schema",
                        "type": "string"
                    },
                    {
                        "name": "CFDE_Grant",
                        "description": "cfde grant used to fund tool",
                        "type": "string"
                    },
                    {
                        "name": "Citations",
                        "description": "number of citations as indicated on pubmed",
                        "type": "integer"
                    },
                    {
                        "name": "Readers_Count",
                        "description": "number of readers as reported on altmetric",
                        "type": "integer"
                    },
                    {
                        "name": "Altmetric_Score",
                        "description": "score of the article on altmetric",
                        "type": "number"
                    },
                    {
                        "name": "Facebook_Shares",
                        "description": "number of times tool shared on facebook",
                        "type": "integer"
                    },
                    {
                        "name": "Readers_in_Mendeley",
                        "description": "number of readers on Mendele as reported on altmetric",
                        "type": "integer"
                    },
                    {
                        "name": "Mentions_in_social_media",
                        "description": "based on altmetric data",
                        "type": "integer"
                    },
                    {
                        "name": "Twitter_accounts_that_tweeted_this_publication",
                        "description": "based on altmetric data",
                        "type": "integer"
                    },
                    {
                        "name": "Scientists_who_mentioned_the_publication_on_Twitter",
                        "description": "based on altmetric data",
                        "type": "number"
                    },
                    {
                        "name": "Institution",
                        "description": "institution affiliation",
                        "type": "string"
                    },
                    {
                        "name": "Country",
                        "description": "author country",
                        "type": "string"
                    }
                ],
                "missingValues": [ "" ],
                "primaryKey": "Tool_Name" 
            }
        }
    ]
}